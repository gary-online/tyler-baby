---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout 
    title="Page Not Found | Tyler Sheetz Hair Extensions"
    description="The page you're looking for doesn't exist. Return to Tyler Sheetz Hair Extensions homepage."
>
    <Navigation />
    
    <!-- 404 Section -->
    <section class="error-section">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-lg-8" data-aos="fade-up">
                    <div class="error-content">
                        <div class="error-icon mb-4">
                            <i class="bi bi-scissors"></i>
                        </div>
                        <h1 class="error-title">404</h1>
                        <h2 class="error-subtitle">Oops! This Page Got Lost</h2>
                        <p class="error-description">
                            Looks like this page is in need of some extensions! The page you're looking for doesn't exist or has been moved.
                        </p>
                        <div class="error-actions mt-5">
                            <a href="/" class="btn btn-primary btn-lg me-3">
                                <i class="bi bi-house-fill me-2"></i>Go Home
                            </a>
                            <a href="/#contact" class="btn btn-outline-primary btn-lg">
                                <i class="bi bi-calendar-check me-2"></i>Book Appointment
                            </a>
                        </div>
                        <div class="error-links mt-5">
                            <p class="mb-3">Quick Links:</p>
                            <div class="quick-links">
                                <a href="/#about" class="quick-link">About Tyler</a>
                                <a href="/#services" class="quick-link">Services</a>
                                <a href="/#gallery" class="quick-link">Gallery</a>
                                <a href="/#contact" class="quick-link">Contact</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer py-4">
        <div class="container text-center">
            <p>&copy; 2025 Tyler Sheetz Hair Extensions. All rights reserved.</p>
        </div>
    </footer>
</Layout>

<style>
    .error-section {
        min-height: 100vh;
        display: flex;
        align-items: center;
        padding: 120px 0 60px;
        background: linear-gradient(135deg, var(--neutral-light) 0%, var(--primary-champagne) 100%);
    }

    .error-content {
        padding: 3rem;
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
    }

    .error-icon {
        font-size: 5rem;
        color: var(--primary-rose-gold);
        animation: float 3s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    .error-title {
        font-family: var(--font-heading);
        font-size: 8rem;
        font-weight: 700;
        color: var(--primary-rose-gold);
        margin: 0;
        line-height: 1;
    }

    .error-subtitle {
        font-family: var(--font-heading);
        font-size: 2.5rem;
        color: var(--primary-black);
        margin: 1rem 0;
    }

    .error-description {
        font-size: 1.1rem;
        color: var(--neutral-dark);
        max-width: 500px;
        margin: 0 auto;
    }

    .error-actions {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .quick-links {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    .quick-link {
        color: var(--primary-rose-gold);
        text-decoration: none;
        font-weight: 500;
        transition: var(--transition-smooth);
        position: relative;
    }

    .quick-link::after {
        content: '';
        position: absolute;
        bottom: -3px;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--primary-rose-gold);
        transition: var(--transition-smooth);
    }

    .quick-link:hover {
        color: var(--accent-rose);
    }

    .quick-link:hover::after {
        width: 100%;
    }

    @media (max-width: 768px) {
        .error-title {
            font-size: 5rem;
        }

        .error-subtitle {
            font-size: 1.8rem;
        }

        .error-content {
            padding: 2rem;
        }

        .error-actions {
            flex-direction: column;
            align-items: center;
        }

        .error-actions .btn {
            width: 100%;
            max-width: 300px;
        }
    }
</style>
