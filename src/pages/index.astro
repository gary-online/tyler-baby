---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
---

<Layout 
    title="Tyler Sheetz Hair Extensions | K-Tip, Beaded Weft & Tape Extensions St. Petersburg FL"
    description="Expert hair extension specialist in St. Petersburg, FL with 18 years experience. Specializing in K-Tip, Beaded Weft, I-Tip, Tape & V-Light extensions. Book your consultation today!"
>
    <Navigation />
    <Hero />

    <!-- About Section -->
    <section class="about-section py-5" id="about">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6" data-aos="fade-right">
                    <div class="about-image">
                        <img src="/assets/images/tyler-profile.jpeg" alt="Tyler Sheetz professional hair extension specialist St. Petersburg Florida with 18 years experience" class="img-fluid rounded shadow-lg">
                        <div class="about-badge">
                            <i class="bi bi-award"></i>
                            <span>Board Certified</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6" data-aos="fade-left">
                    <div class="section-header mb-4">
                        <span class="section-tag">About Tyler</span>
                        <h2 class="section-title">St. Petersburg's Most Trusted Hair Extension Specialist</h2>
                    </div>
                    <div class="about-content">
                        <p class="lead">With 18 years of dedicated experience and a passion for transforming lives through beautiful hair, Tyler Sheetz has become the go-to extension specialist in St. Petersburg, Florida.</p>
                        <p>Tyler specializes in the most advanced hair extension techniques, ensuring seamless, natural-looking results that enhance your unique beauty. Each client receives personalized attention and customized solutions tailored to their hair type, lifestyle, and aesthetic goals.</p>
                        <div class="about-highlights mt-4">
                            <div class="highlight-item">
                                <i class="bi bi-check-circle-fill"></i>
                                <span>Certified in Multiple Extension Techniques</span>
                            </div>
                            <div class="highlight-item">
                                <i class="bi bi-check-circle-fill"></i>
                                <span>Premium Quality Hair Extensions</span>
                            </div>
                            <div class="highlight-item">
                                <i class="bi bi-check-circle-fill"></i>
                                <span>Personalized Consultations</span>
                            </div>
                            <div class="highlight-item">
                                <i class="bi bi-check-circle-fill"></i>
                                <span>Ongoing Care & Support</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="services-section py-5" id="services">
        <div class="container">
            <div class="section-header text-center mb-5" data-aos="fade-up">
                <span class="section-tag">Expert Services</span>
                <h2 class="section-title">Specialized Extension Techniques</h2>
                <p class="section-description">Each method is carefully selected to match your hair type and desired results</p>
            </div>
            
            <div class="row g-4">
                <!-- K-Tip Extensions -->
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="0">
                    <div class="service-card">
                        <div class="service-icon">
                            <i class="bi bi-stars"></i>
                        </div>
                        <h3 class="service-title">K-Tip Extensions</h3>
                        <p class="service-description">
                            Premium keratin bonded extensions that blend seamlessly with your natural hair. Durable, long-lasting, and virtually undetectable.
                            <br>
                            <a href="#gallery" class="internal-link">See K-Tip transformations</a> | <a href="#contact" class="internal-link">Book K-Tip consultation</a>
                        </p>
                        <ul class="service-features">
                            <li><i class="bi bi-check2"></i> Long-lasting results</li>
                            <li><i class="bi bi-check2"></i> Natural movement</li>
                            <li><i class="bi bi-check2"></i> Heat resistant</li>
                        </ul>
                    </div>
                </div>

                <!-- Beaded Weft -->
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="service-card featured">
                        <div class="featured-badge">Most Popular</div>
                        <div class="service-icon">
                            <i class="bi bi-gem"></i>
                        </div>
                        <h3 class="service-title">Beaded Weft</h3>
                        <p class="service-description">
                            Damage-free method using micro beads to secure wefts. Perfect for adding volume and length without heat or adhesives.
                            <br>
                            <a href="#gallery" class="internal-link">See Beaded Weft results</a> | <a href="#contact" class="internal-link">Book Beaded Weft consultation</a>
                        </p>
                        <ul class="service-features">
                            <li><i class="bi bi-check2"></i> No heat or glue</li>
                            <li><i class="bi bi-check2"></i> Reusable extensions</li>
                            <li><i class="bi bi-check2"></i> Scalp-friendly</li>
                        </ul>
                    </div>
                </div>

                <!-- I-Tip -->
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
                    <div class="service-card">
                        <div class="service-icon">
                            <i class="bi bi-hexagon"></i>
                        </div>
                        <h3 class="service-title">I-Tip Extensions</h3>
                        <p class="service-description">
                            Individual strand extensions applied with micro beads. Offers maximum flexibility and natural-looking results.
                            <br>
                            <a href="#gallery" class="internal-link">See I-Tip before & after</a> | <a href="#contact" class="internal-link">Book I-Tip consultation</a>
                        </p>
                        <ul class="service-features">
                            <li><i class="bi bi-check2"></i> Customizable placement</li>
                            <li><i class="bi bi-check2"></i> No adhesives</li>
                            <li><i class="bi bi-check2"></i> Easy maintenance</li>
                        </ul>
                    </div>
                </div>

                <!-- Tape Extensions -->
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="0">
                    <div class="service-card">
                        <div class="service-icon">
                            <i class="bi bi-layers"></i>
                        </div>
                        <h3 class="service-title">Tape Extensions</h3>
                        <p class="service-description">
                            Quick application method using medical-grade tape. Thin, lightweight, and comfortable for everyday wear.
                            <br>
                            <a href="#gallery" class="internal-link">See Tape-In transformations</a> | <a href="#contact" class="internal-link">Book Tape-In consultation</a>
                        </p>
                        <ul class="service-features">
                            <li><i class="bi bi-check2"></i> Fast application</li>
                            <li><i class="bi bi-check2"></i> Lay flat design</li>
                            <li><i class="bi bi-check2"></i> Reusable</li>
                        </ul>
                    </div>
                </div>

                <!-- V-Light -->
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="service-card">
                        <div class="service-icon">
                            <i class="bi bi-brightness-high"></i>
                        </div>
                        <h3 class="service-title">V-Light Extensions</h3>
                        <p class="service-description">
                            Advanced technique for ultra-fine hair. Lightweight and virtually invisible, perfect for delicate hair types.
                            <br>
                            <a href="#gallery" class="internal-link">See V-Light results</a> | <a href="#contact" class="internal-link">Book V-Light consultation</a>
                        </p>
                        <ul class="service-features">
                            <li><i class="bi bi-check2"></i> Ultra-lightweight</li>
                            <li><i class="bi bi-check2"></i> Fine hair friendly</li>
                            <li><i class="bi bi-check2"></i> Invisible bonds</li>
                        </ul>
                    </div>
                </div>

                <!-- Consultation -->
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
                    <div class="service-card consultation-card">
                        <div class="service-icon">
                            <i class="bi bi-chat-heart"></i>
                        </div>
                        <h3 class="service-title">Free Consultation</h3>
                        <p class="service-description">Not sure which method is right for you? Schedule a complimentary consultation to discuss your hair goals and find the perfect solution.</p>
                        <a href="#contact" class="btn btn-primary mt-3">Schedule Consultation</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Gallery Section -->
    <section class="gallery-section py-5" id="gallery">
        <div class="container">
            <div class="section-header text-center mb-5" data-aos="fade-up">
                <span class="section-tag">Portfolio</span>
                <h2 class="section-title">Beautiful Results</h2>
                <p class="section-description">Real transformations from real clients</p>
            </div>
            
            <div class="row g-4">
                {[
                    {num: 1, alt: "K-Tip hair extension before and after transformation by Tyler Sheetz in St. Petersburg FL"},
                    {num: 2, alt: "Beaded Weft hair extensions natural volume and length results St. Petersburg"},
                    {num: 3, alt: "I-Tip hair extension installation seamless blend natural hair St Pete"},
                    {num: 4, alt: "Tape-in hair extensions before after photo St. Petersburg hair stylist"},
                    {num: 5, alt: "V-Light hair extension transformation long flowing hair St. Petersburg FL"},
                    {num: 6, alt: "Professional hair extension results luxury hair extensions St Pete Florida"}
                ].map((item) => (
                    <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay={item.num % 3 * 100}>
                        <div class="gallery-item">
                            <img src={`/assets/images/gallery-${item.num}.jpeg`} alt={item.alt} class="img-fluid">
                            <div class="gallery-overlay">
                                <i class="bi bi-zoom-in"></i>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
            
            <div class="text-center mt-5">
                <a href="https://www.instagram.com/st_pete_hair_extensions" target="_blank" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-instagram me-2"></i>View More on Instagram
                </a>
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="testimonials-section py-5">
        <div class="container">
            <div class="section-header text-center mb-5" data-aos="fade-up">
                <span class="section-tag">Client Love</span>
                <h2 class="section-title">What Clients Are Saying</h2>
            </div>
            
            <div class="row g-4">
                <div class="col-lg-4" data-aos="fade-up" data-aos-delay="0">
                    <div class="testimonial-card">
                        <div class="stars mb-3">
                            {[...Array(5)].map(() => <i class="bi bi-star-fill"></i>)}
                        </div>
                        <p class="testimonial-text">"Tyler transformed my thin hair into the luscious locks I've always dreamed of! The beaded weft extensions look so natural, nobody can tell they're not my real hair. Absolutely in love!"</p>
                        <div class="testimonial-author">
                            <strong>Sarah M.</strong>
                            <span>St. Petersburg, FL</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">
                    <div class="testimonial-card">
                        <div class="stars mb-3">
                            {[...Array(5)].map(() => <i class="bi bi-star-fill"></i>)}
                        </div>
                        <p class="testimonial-text">"I've been to many stylists, but Tyler is truly the best! His attention to detail and expertise with K-Tip extensions is unmatched. My hair has never looked better!"</p>
                        <div class="testimonial-author">
                            <strong>Jessica L.</strong>
                            <span>Tampa Bay Area</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4" data-aos="fade-up" data-aos-delay="200">
                    <div class="testimonial-card">
                        <div class="stars mb-3">
                            {[...Array(5)].map(() => <i class="bi bi-star-fill"></i>)}
                        </div>
                        <p class="testimonial-text">"Professional, talented, and so personable! Tyler took the time to understand exactly what I wanted and delivered beyond my expectations. Highly recommend!"</p>
                        <div class="testimonial-author">
                            <strong>Amanda R.</strong>
                            <span>Clearwater, FL</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="contact-section py-5" id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mb-5 mb-lg-0" data-aos="fade-right">
                    <div class="section-header mb-4">
                        <span class="section-tag">Get In Touch</span>
                        <h2 class="section-title">Ready to Transform Your Hair?</h2>
                        <p class="section-description">Book your consultation today and discover which extension method is perfect for you.</p>
                    </div>
                    
                    <div class="contact-info">
                        <div class="contact-item">
                            <div class="contact-icon">
                                <i class="bi bi-geo-alt-fill"></i>
                            </div>
                            <div class="contact-details">
                                <h4>Address</h4>
                                <p>1592 Central Avenue<br>St. Petersburg, FL 33712</p>
                            </div>
                        </div>

                        <div class="contact-item mt-4">
                            <iframe
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3522.527964893813!2d-82.6445!3d27.7712!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88c2e1b2e2e2e2e2%3A0x2e2e2e2e2e2e2e2e!2s1592%20Central%20Ave%2C%20St%20Petersburg%2C%20FL%2033712!5e0!3m2!1sen!2sus!4v1700000000000!5m2!1sen!2sus"
                                width="100%" height="220" style="border:0; border-radius:12px; box-shadow:0 2px 12px rgba(0,0,0,0.08);" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                        
                        <div class="contact-item">
                            <div class="contact-icon">
                                <i class="bi bi-telephone-fill"></i>
                            </div>
                            <div class="contact-details">
                                <h4>Phone</h4>
                                <p><a href="tel:+17272765617">(727) 276-5617</a></p>
                            </div>
                        </div>
                        
                        <div class="contact-item">
                            <div class="contact-icon">
                                <i class="bi bi-envelope-fill"></i>
                            </div>
                            <div class="contact-details">
                                <h4>Email</h4>
                                <p><a href="mailto:tampatwirl@gmail.com">tampatwirl@gmail.com</a></p>
                            </div>
                        </div>
                        
                        <div class="contact-item">
                            <div class="contact-icon">
                                <i class="bi bi-clock-fill"></i>
                            </div>
                            <div class="contact-details">
                                <h4>Hours</h4>
                                <p>Open availability Monday through Saturday<br>Sunday - Available with Premium Price</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="social-links mt-4">
                        <a href="https://www.instagram.com/st_pete_hair_extensions/" target="_blank" class="social-link" aria-label="Instagram">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="https://www.facebook.com/tylerstailoredhair" target="_blank" class="social-link" aria-label="Facebook">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="https://www.tiktok.com/@hairdoc15" target="_blank" class="social-link" aria-label="TikTok">
                            <i class="bi bi-tiktok"></i>
                        </a>
                    </div>
                </div>
                
                <div class="col-lg-6" data-aos="fade-left">
                    <div class="contact-form-wrapper">
                        <h3 class="mb-4">Send a Message</h3>
                        <form id="contactForm" class="contact-form" action="https://formspree.io/f/xanrdnob" method="POST">
                            <div class="mb-3">
                                <label for="name" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="name" name="name" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                            <div class="mb-3">
                                <label for="phone" class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" id="phone" name="phone">
                            </div>
                            <div class="mb-3">
                                <label for="service" class="form-label">Interested In</label>
                                <select class="form-select" id="service" name="service" required>
                                    <option value="">Select a service...</option>
                                    <option value="k-tip">K-Tip Extensions</option>
                                    <option value="beaded-weft">Beaded Weft</option>
                                    <option value="i-tip">I-Tip Extensions</option>
                                    <option value="tape">Tape Extensions</option>
                                    <option value="v-light">V-Light Extensions</option>
                                    <option value="consultation">Free Consultation</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="message" class="form-label">Message</label>
                                <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg w-100">Send Message</button>
                        </form>
                        <div id="formSuccess" class="alert alert-success mt-3 d-none">
                            Thank you for your message! Tyler will get back to you soon.
                        </div>
                        
                        <div class="text-center my-4">
                            <div class="divider-text">OR</div>
                        </div>
                        
                        <a class="booksy-link btn btn-outline-primary btn-lg w-100" href="https://booksy.com/en-us/461721_tyler-sheetz_hair-salon_223077_st-petersburg" target="_blank" rel="noopener noreferrer">
                            <i class="bi bi-calendar-check me-2"></i>Book with Booksy
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer py-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 text-center text-lg-start mb-3 mb-lg-0">
                    <p class="mb-0">&copy; 2024 Tyler Sheetz Hair Extensions. All Rights Reserved.</p>
                </div>
                <div class="col-lg-6 text-center text-lg-end">
                    <p class="mb-0">Serving St. Petersburg, Tampa, Clearwater & Surrounding Areas</p>
                </div>
            </div>
        </div>
    </footer>
</Layout>
